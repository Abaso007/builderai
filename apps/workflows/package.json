  "dependencies": {
    "@trigger.dev/nextjs": "^2.3.18",
    "@trigger.dev/react": "^2.3.18",
    "@trigger.dev/sdk": "^2.3.18",
    "next": "14.2.3",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@builderai/tsconfig": "^0.1.0",
    "@types/node": "20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "dotenv-cli": "^7.3.0",
    "tailwindcss": "3.4.1",
    "typescript": "^5.3.3"
  }
