{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Unprice Documentation",
  "colors": {
    "primary": "#ab6400",
    "light": "#ffc53d",
    "dark": "#ab6400"
  },
  "favicon": "/favicon.ico",
  "api": {
    "playground": {
      "display": "interactive"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Introduction",
            "icon": "home",
            "pages": [
              "index",
              {
                "group": "Quickstart",
                "pages": ["quickstart/onboarding-plan"]
              }
            ]
          },
          {
            "group": "Features",
            "icon": "fingerprint",
            "pages": [
              "features/plans",
              "features/subscriptions",
              "features/customers",
              "features/analytics",
              "features/billing"
            ]
          },
          {
            "group": "Concepts",
            "pages": [
              {
                "group": "Identities",
                "icon": "fingerprint",
                "pages": ["concepts/identities/overview", "concepts/identities/ratelimits"]
              }
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "API Documentation",
            "pages": ["api-reference/introduction"]
          },
          {
            "group": "Errors",
            "pages": [
              "api-reference/errors/introduction",
              {
                "group": "Errors",
                "pages": [
                  "api-reference/errors/code/BAD_REQUEST",
                  "api-reference/errors/code/UNAUTHORIZED",
                  "api-reference/errors/code/FORBIDDEN",
                  "api-reference/errors/code/NOT_FOUND",
                  "api-reference/errors/code/CONFLICT",
                  "api-reference/errors/code/TOO_MANY_REQUESTS",
                  "api-reference/errors/code/INTERNAL_SERVER_ERROR"
                ]
              }
            ]
          },
          {
            "group": "Endpoints",
            "openapi": {
              "source": "/api-reference/openapi.json",
              "directory": "api-reference"
            }
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Home",
          "href": "https://unprice.dev",
          "icon": "globe"
        },
        {
          "anchor": "Community",
          "href": "https://discord.gg/unprice",
          "icon": "discord"
        },
        {
          "anchor": "Blog",
          "href": "https://unprice.dev",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.png",
    "dark": "/logo/dark.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:jhonsfran@gmail.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://app.unprice.dev"
    }
  },
  "footer": {
    "socials": {
      "github": "https://github.com/jhonsfran1165/unprice"
    }
  }
}
