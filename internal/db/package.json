{
  "name": "@unprice/db",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./validators": "./src/validators.ts",
    "./schema": "./src/schema.ts",
    "./queries": "./src/queries.ts",
    "./utils": "./src/utils.ts"
  },
  "typesVersions": {
    "*": {
      "*": ["src/*"]
    }
  },
  "license": "AGPL-3.0",
  "scripts": {
    "test": "vitest run",
    "clean": "rm -rf .turbo node_modules",
    "generate": "pnpm drizzle-kit generate --config=config.ts",
    "drop": "pnpm drizzle-kit drop --config=config.ts",
    "migrate": "pnpm drizzle-kit migrate --config=config.ts",
    "migrate:custom": "pnpm tsx src/migrate.ts",
    "introspect": "pnpm drizzle-kit introspect --config=config.ts",
    "push": "pnpm drizzle-kit push --config=config.ts",
    "up": "pnpm drizzle-kit up --config=config.ts",
    "studio": "pnpm drizzle-kit studio --config=config.ts --verbose",
    "typecheck": "tsc --noEmit",
    "with-env": "infisical run --env=preview --path=/app --"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.3",
    "@t3-oss/env-nextjs": "0.9.1",
    "@unprice/config": "^0.1.0",
    "@unprice/error": "^0.1.0",
    "base-x": "^4.0.0",
    "date-fns": "^3.3.1",
    "dinero.js": "2.0.0-alpha.14",
    "drizzle-orm": "^0.36.1",
    "drizzle-zod": "^0.5.1",
    "random-word-slugs": "^0.1.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/ws": "^8.5.10",
    "@unprice/tsconfig": "^0.1.0",
    "drizzle-kit": "^0.28.0",
    "tsx": "^4.7.2",
    "typescript": "^5.3.3",
    "vitest": "^2.0.5",
    "ws": "^8.17.1"
  }
}
