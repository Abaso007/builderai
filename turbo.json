{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "DATABASE_URL",
    "DATABASE_READ1_URL",
    "DATABASE_READ2_URL",
    "SKIP_ENV_VALIDATION",
    "PROJECT_ID_VERCEL",
    "VERCEL_TEAM_ID",
    "VERCEL_TOKEN",
    "AUTH_SECRET",
    "TINYBIRD_TOKEN",
    "TINYBIRD_URL",
    "AUTH_GITHUB_CLIENT_ID",
    "AUTH_GITHUB_CLIENT_SECRET",
    "AUTH_REDIRECT_PROXY_URL",
    "RESEND_API_KEY",
    "ENCRYPTION_KEY",
    "BASELIME_APIKEY",
    "TRIGGER_SECRET_KEY",
    "UPSTASH_REDIS_REST_TOKEN",
    "UPSTASH_REDIS_REST_URL",
    "NODE_ENV",
    "VERCEL_ENV"
  ],
  "tasks": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "next-env.d.ts", ".expo/**", ".output/**"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "test": {
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^topo"],
      "outputs": ["node_modules/.cache/tsbuildinfo.json"]
    },
    "clean": {
      "cache": false
    },
    "//#clean": {
      "cache": false
    }
  }
}
