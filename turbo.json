{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": ["NODE_ENV", "VERCEL_ENV"],
  "globalPassThroughEnv": [
    "SKIP_ENV_VALIDATION",
    "EMIT_METRICS_LOGS",
    "TRPC_LOGGER",
    "DRIZZLE_LOG"
  ],
  "tasks": {
    "install": {
      "outputs": ["node_modules/**", "pnpm-lock.yaml", "yarn.lock"]
    },
    "build": {
      "dependsOn": ["fmt", "^build"],
      "outputs": [
        "app/nextjs/.next/**",
        "!app/nextjs/.next/cache/**",
        "app/nextjs/next-env.d.ts",
        "dist/**",
        "app/auth-proxy/.vercel/output/**",
        "!app/auth-proxy/.vercel/cache/**",
        "app/auth-proxy/.next/**",
        "!app/auth-proxy/.next/cache/**",
        ".output/**"
      ],
      "env": [
        "NEXT_PUBLIC_*",
        "!NEXT_PUBLIC_VERCEL_*",
        "DATABASE_URL",
        "DATABASE_READ1_URL",
        "DATABASE_READ2_URL",
        "AUTH_SECRET",
        "AUTH_GITHUB_CLIENT_ID",
        "AUTH_GITHUB_CLIENT_SECRET",
        "AUTH_REDIRECT_PROXY_URL",
        "ENCRYPTION_KEY",
        "VERCEL_ENV",
        "NODE_ENV"
      ]
    },
    "fmt": {
      "cache": false
    },
    "start": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "env": [
        "NEXT_PUBLIC_*",
        "!NEXT_PUBLIC_VERCEL_*",
        "DATABASE_URL",
        "DATABASE_READ1_URL",
        "DATABASE_READ2_URL",
        "AUTH_SECRET",
        "AUTH_GITHUB_CLIENT_ID",
        "AUTH_GITHUB_CLIENT_SECRET",
        "AUTH_REDIRECT_PROXY_URL",
        "ENCRYPTION_KEY",
        "VERCEL_ENV",
        "NODE_ENV",
        "RESEND_API_KEY",
        "EMIT_METRICS_LOGS",
        "NEXT_PUBLIC_APP_DOMAIN",
        "NEXT_PUBLIC_VERCEL_ENV",
        "COOKIE_ENCRYPTION_KEY",
        "ENCRYPTION_KEY",
        "CLOUDFLARE_API_KEY",
        "CLOUDFLARE_ZONE_ID",
        "BASELIME_APIKEY",
        "TRIGGER_SECRET_KEY",
        "UPSTASH_REDIS_REST_TOKEN",
        "UPSTASH_REDIS_REST_URL",
        "VERCEL_PROJECT_UNPRICE_ID",
        "VERCEL_TEAM_ID",
        "VERCEL_TOKEN",
        "TINYBIRD_TOKEN",
        "RESEND_API_KEY",
        "TINYBIRD_URL",
        "UNPRICE_API_KEY",
        "FLAGS_SECRET"
      ]
    },
    "test": {
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "cache": false
    },
    "clean:workspaces": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
