{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": ["NODE_ENV", "VERCEL_ENV"],
  "globalPassThroughEnv": [
    "SKIP_ENV_VALIDATION",
    "BASELIME_APIKEY",
    "TRIGGER_SECRET_KEY",
    "UPSTASH_REDIS_REST_TOKEN",
    "UPSTASH_REDIS_REST_URL",
    "VERCEL_PROJECT_UNPRICE_ID",
    "VERCEL_TEAM_ID",
    "VERCEL_TOKEN",
    "TINYBIRD_TOKEN",
    "RESEND_API_KEY",
    "TINYBIRD_URL",
    "EMIT_METRICS_LOGS",
    "TRPC_LOGGER",
    "DRIZZLE_LOG",
    "NEXT_PUBLIC_APP_DOMAIN"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "app/next.js/.next/**",
        "!app/next.js/.next/cache/**",
        "app/next.js/next-env.d.ts",
        "dist/**",
        "app/auth-proxy/.output/**",
        "app/auth-proxy/.vercel/**",
        "!app/auth-proxy/.output/cache/**"
      ],
      "env": [
        "NEXT_PUBLIC_*",
        "!NEXT_PUBLIC_VERCEL_*",
        "DATABASE_URL",
        "DATABASE_READ1_URL",
        "DATABASE_READ2_URL",
        "AUTH_SECRET",
        "AUTH_GITHUB_CLIENT_ID",
        "AUTH_GITHUB_CLIENT_SECRET",
        "AUTH_REDIRECT_PROXY_URL",
        "ENCRYPTION_KEY",
        "VERCEL_ENV",
        "NODE_ENV"
      ]
    },
    "fmt": {
      "cache": false
    },
    "start": {
      "cache": false
    },
    "dev": {
      "env": [
        "NEXT_PUBLIC_*",
        "!NEXT_PUBLIC_VERCEL_*",
        "DATABASE_URL",
        "DATABASE_READ1_URL",
        "DATABASE_READ2_URL",
        "AUTH_SECRET",
        "AUTH_GITHUB_CLIENT_ID",
        "AUTH_GITHUB_CLIENT_SECRET",
        "AUTH_REDIRECT_PROXY_URL",
        "ENCRYPTION_KEY",
        "VERCEL_ENV",
        "NODE_ENV"
      ],
      "persistent": true,
      "cache": false
    },
    "test": {
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "cache": false
    },
    "clean:workspaces": {
      "cache": false
    }
  }
}
