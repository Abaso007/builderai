{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "maxSize": 1572864
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git"
  },
  "organizeImports": {
    "enabled": true,
    "ignore": [
      "node_modules",
      ".next",
      "dist",
      "./internal/api/src/openapi.d.ts",
      ".wrangler",
      ".react-email",
      ".contentlayer",
      ".nitro",
      ".output",
      "./internal/db/src/migrations"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "nursery": {
        "useSortedClasses": "error"
      },
      "recommended": true,
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "correctness": {
        "noUnusedVariables": "error",
        "useExhaustiveDependencies": "off",
        "noUnusedImports": "error"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "style": {
        "useBlockStatements": "off",
        "noNonNullAssertion": "off"
      },
      "performance": {
        "noDelete": "off"
      },
      "suspicious": {
        "noExplicitAny": "error",
        "noConsoleLog": "warn"
      },
      "complexity": {
        "noForEach": "off"
      }
    },
    "ignore": [
      "node_modules",
      ".next",
      "dist",
      "./internal/api/src/openapi.d.ts",
      ".wrangler",
      ".react-email",
      ".contentlayer",
      ".nitro",
      ".output",
      "./internal/db/src/migrations"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "attributePosition": "auto",
    "lineWidth": 100,
    "ignore": [
      "node_modules",
      ".next",
      "dist",
      "./internal/api/src/openapi.d.ts",
      ".wrangler",
      ".react-email",
      ".contentlayer",
      ".nitro",
      ".output",
      "./internal/db/src/migrations"
    ]
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingComma": "es5",
      "semicolons": "asNeeded",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": false,
      "quoteStyle": "double"
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  }
}
